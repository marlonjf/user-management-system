<!DOCTYPE html>
<html>
  <head>
    <title>MarlonProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'header' %>
    <%= render 'flash_messages' %>
    <div id="body-container" class='container p-5'>
      <%= yield %>
    </div>
    <%= render 'footer' %>
  </body>
</html>
